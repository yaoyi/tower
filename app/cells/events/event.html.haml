.event.event-common{:class => "event-#{@event.eventable_type.downcase}-#{@event.action}"}
  %a.from{:href => "#{team_user_path(current_team, @event.actor)}", :target => "_blank"}
    %img.avatar{:alt => "#{@event.actor}", :src => "#{gravatar_image_url(@event.actor.email)}"}/
  %i.icon-event
  .event-main
    .event-head
      %a.event-created-at
        = @event.created_at.strftime("%H:%M")
      %span.event-actor
        %a.link-member{:href => "#{team_user_path(current_team, @event.actor)}", :target => "_blank"}
          = @event.actor.nickname
      %span.event-action
        = @action
      %span.event-text
        %span.emphasize
          %a.todo-rest{:href => "#{@content_path || polymorphic_path([@event.project, @event.eventable])}", :title => ""}
            = @event.content
    - unless @body.nil?
      .event-body
        = @body