.wrapper
  #page-launchpad.page
    .topbar
      %h1.logo
        %a{:href => "/", :title => "返回"} tower.im
      .account-info
        %span.welcome hi, super
        %a{"data-method" => "DELETE", :href => "/users/sign_out", :rel => "nofollow"} 退出
    %ul.teams
      - @teams.each do |team|
        %li
          %a{:href => "#{team_path(team)}"}
            %span.name
              = team.name
            %b.fly ✈
      %li.new
        = form_for Team.new, :html => {:class => "form-horizontal"} do |f|
          = f.text_field :name, :style => "float: left;width: 200px;margin: 3px;"
          = f.submit '新的团队', :class => "btn btn-primary"
    .footer
      ©
      %a{:href => "yaoyi.github.io", :target => "_blank"} yaoyi
    %script#tpl-new-team{:type => "text/html"}
      .new-team
        %form.form.form-new-team{:action => "/users/create_team/", "data-remote" => "true", :method => "post"}
          %h4.simple-dialog-title 新团队名称
          .form-item
            .form-field
              %input#txt-team{:autofocus => "", "data-validate" => "required", "data-validate-msg" => "请填写团队或者公司的名称", :name => "team", :placeholder => "例如：iPhone 6 设计团队", :type => "text"}/
          .form-item.form-btns
            %button#btn-create-team.btn.btn-primary.btn-large{"data-disable-with" => "正在创建...", "data-success-text" => "创建成功", :type => "submit"} 创建团队
            %a#btn-cancel-create-team.btn.btn-x{:href => "javascript:;"} 取消