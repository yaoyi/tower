.wrapper
  #page-signup.page
    .sign-page
      .hd
        %h1.logo
          %a{:href => "/"} tower.im
      .bd
        = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form'}) do |f|
          .form-item
            .form-field
              = f.text_field :nickname, :class => 'nickname', :placeholder => "填写昵称"
          .form-item
            .form-field
              = f.email_field :email, :class => 'email', :placeholder => "填写邮箱，例如: 10001@qq.com"
          .form-item
            .form-field
              = f.password_field :password, :class => 'password', :placeholder => "设置密码，至少包含 6 位字符"
          .form-item.form-buttons
            = f.submit "注册", :id => "btn-signup", :class => "btn btn-primary btn-large btn-submit"
            .desc
              %p.left
                已有 Tower 帐号？
                %span
                  %a{:href => "/users/sign_in"} 直接登录 →
      .ft
        © yaoyi
